<%- include('header') %>
    <div class="container-fluid converter">
        <form action="/weight" method="post">
            <div class="from-section">
                <label for="from_units" class="me-3">From:</label>
                <select name="from_unit" class="me-2" id="units">
                    <option value="kg" <% if (from_unit === 'kg') { %> selected <% } %> >Kilogram</option>
                    <option value="g"  <% if (from_unit === 'g') { %> selected <% } %> >Gram</option>
                    <option value="mg" <% if (from_unit === 'mg') { %> selected <% } %> >Milligram</option>
                    <option value="lb"  <% if (from_unit === 'lb') { %> selected <% } %> >Pound</option>
                </select>
                <input type="number" name="from_value" placeholder="Enter the Value"><br>
            </div>
            <div class="to-section">
                <label for="to_unit" class="to_label">To:</label>
                <select name="to_unit" class="me-2" id="unit">
                    <option value="kg" <% if (to_unit === 'kg') { %> selected <% } %> >Kilogram</option>
                    <option value="g"  <% if (to_unit === 'g') { %> selected <% } %> >Gram</option>
                    <option value="mg"  <% if (to_unit === 'mg') { %> selected <% } %>>Milligram</option>
                    <option value="lb"  <% if (to_unit === 'lb') { %> selected <% } %>>Pound</option>
                </select>
                <input type="text" name="result" value=" <%= result %> " />
                <br>
            </div>
            <input type="submit" value="calculate">

        </form>

    </div>

</body>

</html>