<%- include('header') %>
    <div class="container-fluid converter">
        <form action="/volume" method="post">
            <div class="from-section">
                <label for="from_units" class="me-3">From:</label>
                <select name="from_unit" class="me-2" id="units">
                    <option value="m3"  <% if (from_unit === 'm3') { %> selected <% } %>>Cubic Meter</option>
                    <option value="km3"  <% if (from_unit === 'km3') { %> selected <% } %>>Cubic Kilometer</option>
                    <option value="cm3"  <% if (from_unit === 'cm3') { %> selected <% } %>>Cubic Centimeter</option>
                    <option value="mm3"  <% if (from_unit === 'mm3') { %> selected <% } %>>Cubic Millimeter</option>
                    <option value="ml"  <% if (from_unit === 'ml') { %> selected <% } %>>Milliliter</option>
                    <option value="l"  <% if (from_unit === 'l') { %> selected <% } %>>Liter</option>
                </select>
                <input type="number" name="from_value" placeholder="Enter the Value"><br>
            </div>
            <div class="to-section">
                <label for="to_unit" class="to_label">To:</label>
                <select name="to_unit" class="me-2" id="unit">
                    <option value="m3"  <% if (to_unit === 'm3') { %> selected <% } %>>Cubic Meter</option>
                    <option value="km3"  <% if (to_unit === 'km3') { %> selected <% } %>>Cubic Kilometer</option>
                    <option value="cm3"  <% if (to_unit === 'cm3') { %> selected <% } %>>Cubic Centimeter</option>
                    <option value="mm3"  <% if (to_unit === 'mm3') { %> selected <% } %>>Cubic Millimeter</option>
                    <option value="ml"  <% if (to_unit === 'ml') { %> selected <% } %>>Milliliter</option>
                    <option value="l"  <% if (to_unit === 'l') { %> selected <% } %>>Liter</option>
                </select>
                <input type="text" name="result" value=" <%= result %> " />
                <br>
            </div>
            <input type="submit" value="calculate">

        </form>

    </div>

</body>

</html>